        <template id="tmp_refund_form" name="Partner Form">
            <t t-call="website.layout">
                <script type="text/javascript" src="Refund/static/src/js/submitt_button.js"/>
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-6">
                            <form action="/refund/form/submit">
                                <br></br>
                                <h3 align="center">Refund Request Form</h3>
                                <br></br>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Student Name:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="student_name" type="student_name"
                                                   class="form-control s_website_form_input"
                                                   name="student_name" placeholder="Student name" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Course:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="course" type="course"
                                                   class="form-control s_website_form_input"
                                                   name="course" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Batch:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="batch" type="batch"
                                                   class="form-control s_website_form_input"
                                                   name="batch" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Branch:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="branch" type="branch"
                                                   class="form-control s_website_form_input"
                                                   name="branch" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Admission No:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="admission_no" type="admission_no"
                                                   class="form-control s_website_form_input"
                                                   name="admission_no" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Phone Number:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="phone" type="phone"
                                                   class="form-control s_website_form_input"
                                                   name="phone" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Parent Number:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="parent_no" type="parent_no"
                                                   class="form-control s_website_form_input"
                                                   name="parent_no" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Email:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="email" type="email"
                                                   class="form-control s_website_form_input"
                                                   name="email" required=" "/>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Amount Paid:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="amount" type="amount"
                                                   class="form-control s_website_form_input"
                                                   name="amount" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Invoice Number:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="invoice_no" type="invoice_no"
                                                   class="form-control s_website_form_input"
                                                   name="invoice_no" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="date" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Invoice Date:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="invoice_date" type="invoice_date"
                                                   class="form-control s_website_form_input"
                                                   name="invoice_date" placeholder="YYYY-MM-DD" required=" "/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="text" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">
                                                Reason for Refund:
                                            </span>
                                            <span class="s_website_form_mark">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="reason" type="reason"
                                                   class="form-control s_website_form_input"
                                                   name="reason" required=" "/>
                                        </div>
                                    </div>
                                </div>


                                <!--                                <div class="form-group">-->
                                <!--                                    <label for="name">Phone:</label>-->
                                <!--                                    <input type="text" class="form-control" name="phone"-->
                                <!--                                           id="phone" required="true"/>-->
                                <!--                                </div>-->


                                <p>I understand that the refund amount will be determined based on the institution's
                                    policies. A full refund may not be granted.
                                    I am aware that the institution reserves the right to reject refund requests in
                                    certain cases.
                                </p>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="text" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <div>
                                            <input type="checkbox" id="vehicle1" name="vehicle1" value="Bike"/>
                                            <label for="vehicle1">I agree</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit"
                                     data-name="Submit Button">
                                    <div style="width: 200px;"
                                         class="s_website_form_label"/>
                                    <button type="submit" id="submit"
                                            class="btn btn-primary">Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="tmp_refund_form_success" name="Customer Form Successfully Submitted">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="alert alert-success">
                                Refund Request Completed..
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="submitt_button_hide" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="Refund/static/src/js/submitt_button.js"/>
            </xpath>
        </template>

    </data>
</odoo>